<div class="card">
    <h3 class="card-header">Ask a Question</h3>
    <form class="ask-question-form card-body">
        <div class="form-group">
            <label  class="form-label" for="question-title">Title</label>
            <input class="form-input" type="text" id="question-title" />
        </div>
        <div class="form-group">
            <label for="question-text">Content</label>
            <input class="form-input" type="textarea" id="question-text" />
        </div>
        <div class="form-group">
            <button id="ask-question-form" class="btn btn-primary" type="submit">ASK!</button>
        </div>
    </form>
</div>

